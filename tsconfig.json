{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": [
      "ES2020",
      "DOM",
      "DOM.Iterable"
    ],
    "module": "ESNext",
    "skipLibCheck": true,
    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    /* Linting */
    "strict": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noFallthroughCasesInSwitch": true,
    /* Path Aliases & Root */
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "client/src/*"
      ],
      "@shared/*": [
        "shared/*"
      ]
    },
    // HATALI OLAN KISIM BURASIYDI, DÜZELTİLDİ:
    "rootDir": "."
  },
  "include": [
    "client/src",
    "shared",
    "server",
    "server/index.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}